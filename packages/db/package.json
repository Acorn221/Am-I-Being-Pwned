{
  "name": "@amibeingpwned/db",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "default": "./src/client.ts"
    },
    "./schema": {
      "types": "./dist/schema.d.ts",
      "default": "./src/schema.ts"
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "tsc",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint --flag unstable_native_nodejs_ts_config",
    "generate": "pnpm with-env drizzle-kit generate",
    "migrate": "pnpm with-env drizzle-kit migrate",
    "push": "pnpm with-env drizzle-kit push",
    "studio": "pnpm with-env drizzle-kit studio",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "with-env": "dotenv -e ../../.env --",
    "ingest": "pnpm with-env tsx scripts/ingest-cws.ts"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.10.4",
    "drizzle-orm": "catalog:",
    "drizzle-zod": "^0.8.3",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@amibeingpwned/eslint-config": "workspace:*",
    "@amibeingpwned/prettier-config": "workspace:*",
    "@amibeingpwned/tsconfig": "workspace:*",
    "@types/pg": "^8.11.14",
    "drizzle-kit": "^0.31.5",
    "eslint": "catalog:",
    "pg": "^8.16.0",
    "prettier": "catalog:",
    "tsx": "^4.20.3",
    "typescript": "catalog:"
  },
  "prettier": "@amibeingpwned/prettier-config"
}
